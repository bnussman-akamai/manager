{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "devDependencies": {
    "husky": "^9.1.5",
    "typescript": "^5.5.4",
    "concurrently": "^8.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn workspaces run precommit"
    }
  },
  "scripts": {
    "lint": "eslint . --quiet --ext .js,.ts,.tsx",
    "install:all": "pnpm install",
    "build:sdk": "pnpm --filter @linode/api-v4 build",
    "build:validation": "pnpm --filter @linode/validation build",
    "build": "pnpm run --parallel build",
    "build:analyze": "pnpm --filter @linode/manager build:analyze",
    "up": "pnpm install:all && pnpm build:validation && pnpm build:sdk && pnpm start:all",
    "up:expose": "pnpm install:all && pnpm build:validation && pnpm build:sdk && pnpm start:all:expose",
    "dev": "pnpm install:all && pnpm start:all",
    "start:all": "pnpm run --parallel dev",
    "start:all:expose": "concurrently -n api-v4,validation,manager -c blue,yellow,green \"pnpm --filer @linode/api-v4 dev\" \"pnpm --filter @linode/validation dev\" \"pnpm --filter @linode/manager start:expose\"",
    "start:manager": "pnpm --filter @linode/manager dev",
    "start:manager:ci": "pnpm --filter @linode/manager start:ci",
    "clean": "rm -rf node_modules && rm -rf packages/@linode/api-v4/node_modules && rm -rf packages/manager/node_modules && rm -rf packages/@linode/validation/node_modules",
    "test": "pnpm --filter @linode/manager test",
    "package-versions": "node ./scripts/package-versions/index.js",
    "storybook": "pnpm --filter @linode/manager storybook",
    "cy:run": "pnpm --filter @linode/manager cy:run",
    "cy:e2e": "pnpm --filter @linode/manager cy:e2e",
    "cy:ci": "pnpm cy:e2e",
    "cy:debug": "pnpm --filer @linode/manager cy:debug",
    "cy:component": "pnpm --filter @linode/manager cy:component",
    "cy:rec-snap": "pnpm --filter @linode/manager cy:rec-snap",
    "changeset": "node scripts/changelog/changeset.mjs",
    "generate-changelogs": "node scripts/changelog/generate-changelogs.mjs",
    "coverage": "pnpm --filter @linode/manager coverage",
    "coverage:summary": "pnpm --filter @linode/manager coverage:summary",
    "junit:summary": "ts-node scripts/junit-summary/index.ts",
    "generate-tod": "ts-node scripts/tod-payload/index.ts",
    "docs": "bunx vitepress@1.0.0-rc.44 dev docs"
  },
  "resolutions": {
    "braces": "^3.0.3",
    "@babel/traverse": "^7.23.3",
    "minimist": "^1.2.3",
    "yargs-parser": "^21.1.1",
    "kind-of": "^6.0.3",
    "node-fetch": "^2.6.7",
    "ua-parser-js": "^0.7.33",
    "immer": "^9.0.6",
    "glob-parent": "^5.1.2",
    "hosted-git-info": "^5.0.0",
    "yaml": "^2.3.0",
    "word-wrap": "^1.2.4",
    "semver": "^7.5.2",
    "tough-cookie": "^4.1.3",
    "jackspeak": "2.1.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "version": "0.0.0",
  "volta": {
    "node": "20.17.0"
  },
  "dependencies": {}
}
